<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button android:id="@+id/btnCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_by_city"
        android:gravity="center"
        android:textSize="15sp"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"/>

    <Button android:id="@+id/btnNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_by_number"
        android:gravity="center"
        android:textSize="15sp"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"/>

    <Button android:id="@+id/btnAirport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_by_airport"
        android:gravity="center"
        android:textSize="15sp"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"/>

    <ListView android:id="@+id/lvSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>